%html
  %head
    = javascript_include_tag :defaults, 'galleria/src/galleria', 'galleria/src/themes/noelle/galleria.noelle', 'mousewheel.js', 'scrollpane.js', 'website'
    = stylesheet_link_tag 'scrollpane', 'compiled/application'
    
  %body
    #banner
    %center
      #page{:class => "#{params[:controller]} #{params[:action]} #{params[:name]}"}
        #top_banner
          %h1
            = link_to root_path do
              Noëlle Echiffre
              %br/
              Photographe

          %ul#menu
            %li= link_to "les séries -", categories_path, :class => (params[:controller] == "categories" and params[:action] == 'index' ? 'selected' : nil )
            %li= link_to "la démarche de l'artiste -", page_path(:name => Page::DEMARCHE.name)
            %li= link_to "les actualités -", page_path(:name => Page::ACTUALITES.name)
            %li= link_to "la digigraphie -", page_path(:name => Page::DIGIGRAPHIE.name)
            %li= link_to "contact ", page_path(:name => Page::CONTACT.name)

          = yield(:back)

        #side_content_wrapper
          #side_content= yield(:side_content)
        #main_content_wrapper
          #main_content= yield

        #footer
          #copyright © Copyright Noëlle Echiffre

        #thumbs

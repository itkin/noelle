!!! XML
!!!
%html
  %head
    = stylesheet_link_tag 'admin'
    = javascript_include_tag 'admin'
    %meta{ "http-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
    = csrf_meta_tag
  %html
    #page
      #banner
        %h1 ::ADMIN
        #user_links
          %span= current_user.email
          = link_to "Log out", destroy_user_session_path, :method => :delete
      #content
        #tabs
          %ul
            %li= link_to content_tag(:span, "Categories & projets"), admin_categories_path
            %li= link_to content_tag(:span, "Pages"), admin_pages_path, :title => "pages_cont"
            %li= link_to content_tag(:span, "Utilisateurs"), admin_users_path
            %li= link_to content_tag(:span, "Abonnes"), admin_subscribers_path
            %li= link_to content_tag(:span, "Traductions"), admin_translations_path
            %li= link_to content_tag(:span, "Images inserables"), admin_images_path
          #pages_cont= yield
